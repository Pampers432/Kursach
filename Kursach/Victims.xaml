<Window x:Class="Kursach.Victims"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Victims"
        WindowStartupLocation="CenterScreen"
        Width="1550" Height="875"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="White"
        Closing="Window_Closing">


    <Grid>
        <!-- Задний фон -->
        <Image Source="/bg.png"
               Stretch="Fill"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Panel.ZIndex="0" />

        <Button Content="✖" Width="35" Height="35" FontSize="14" FontWeight="Bold" HorizontalAlignment="Right"
        VerticalAlignment="Top" Margin="0,14,16,0" Click="CloseButton_Click" Background="LightBlue" 
        BorderBrush="Black" BorderThickness="2" Foreground="Red" Cursor="Hand" ToolTip="Закрыть"/>

        <Button Content="Вернуться" Margin="30,786,1302,36" Click="ReturnButton_Click" FontSize="16" Background="#88CFAC"/>

        <!-- Область поиска -->
        <Grid Margin="30,30,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="35" Panel.ZIndex="1">
            <TextBox x:Name="SearchBox"
                     FontSize="16"
                     VerticalContentAlignment="Center"
                     TextChanged="SearchBox_TextChanged"
                     GotFocus="SearchBox_GotFocus"
                     LostFocus="SearchBox_LostFocus"/>
            <TextBlock x:Name="Placeholder"
                       Text="Введите имя или фамилию"
                       FontStyle="Italic"
                       Foreground="Gray"
                       IsHitTestVisible="False"
                       Margin="5,0,0,0"
                       VerticalAlignment="Center"
                       Visibility="Visible"/>
        </Grid>

        <!-- Список жертв -->
        <ListView x:Name="VictimList"
                  Width="500" Height="664"
                  Margin="30,80,1020,0"
                  VerticalAlignment="Top"
                  SelectionChanged="VictimList_SelectionChanged"
                  Background="#E5FFFFFF"
                  BorderBrush="#888"
                  BorderThickness="1"
                  FontSize="14"
                  DisplayMemberPath="FullName"
                  Panel.ZIndex="1"/>

        <!-- Панель информации -->
        <Border Background="#F5FFFFFF"
                BorderBrush="DarkGray"
                BorderThickness="1"
                CornerRadius="5"
                Margin="560,80,30,131"
                Panel.ZIndex="1">
            <StackPanel Margin="20">
                <TextBlock Text="Информация о жертве" FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>
                <Image x:Name="VictimPhoto"
                       Width="180" Height="180"
                       Stretch="UniformToFill"
                       Margin="0,0,0,15"
                       HorizontalAlignment="Left"
                       Visibility="Collapsed"/>
                <TextBlock Text="ФИО:" FontWeight="Bold"/>
                <TextBlock x:Name="FullName" Margin="0,0,0,10"/>
                <TextBlock Text="Дата рождения:" FontWeight="Bold"/>
                <TextBlock x:Name="BirthDate" Margin="0,0,0,10"/>
                <TextBlock Text="Дата смерти:" FontWeight="Bold"/>
                <TextBlock x:Name="DeathDate" Margin="0,0,0,10"/>
                <TextBlock Text="Описание:" FontWeight="Bold"/>
                <TextBlock x:Name="VictimDescription"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"
                           FontSize="14"/>
            </StackPanel>

        </Border>
    </Grid>
</Window>
