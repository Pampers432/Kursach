<Window x:Class="Kursach.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        WindowStartupLocation="CenterScreen"
        Width="1550" Height="875"
        WindowStyle="None">

    <Grid>
        
        <!-- Карта -->
        <Image x:Name="img"
               Source="/Map.png"
               HorizontalAlignment="Left"
               VerticalAlignment="Center" 
               Width="1026" Height="875" Stretch="Fill" Margin="524,0,0,0"/>
        
        <!-- Кнопки навигации -->
        <Button Content="Справка" Margin="23,794,1297,28" FontSize="16"/>
        <Button Content="Очистить" Margin="660,795,660,27" FontSize="16" Click="Button_Click"/>
        <Button Content="Жертвы" Margin="273,795,1046,28" FontSize="16"/>

        <Button x:Name="Vil1" HorizontalAlignment="Left" Margin="804,605,0,0" VerticalAlignment="Top"
        Width="35" Height="35" Background="Transparent" BorderThickness="0" Click="Vil1_Click">
            <Image Source="/Village.png" Stretch="Uniform"/>
        </Button>
        
        <!-- Поле поиска -->
        <Rectangle HorizontalAlignment="Left" Height="50" Margin="23,10,0,0" Fill="LightGray"
                   Stroke="Black" VerticalAlignment="Top" Width="481"/>
        <TextBox HorizontalAlignment="Left" VerticalContentAlignment="Center" FontSize="16" Background="Transparent"
                 Margin="23,10,0,0" TextWrapping="Wrap" Text="Поиск" VerticalAlignment="Top" Width="446" Height="50"/>
        <TextBlock HorizontalAlignment="Left" Margin="474,25,0,0" TextWrapping="Wrap"
                   FontFamily="Segoe MDL2 Assets" FontSize="20" Text="" VerticalAlignment="Top"/>

        <!-- Фильтры -->
        <!-- Кнопка деревни -->
        <Button x:Name="Village" Width="50" Height="50" Margin="23,622,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="LightGray"
                BorderBrush="Black"
                Click="Village_Click">
            <Image x:Name="Village_Img" Source="/Village.png" Stretch="Uniform"/>
        </Button>

        <!-- Кнопка гетто -->
        <Button x:Name="Ghetto" Width="50" Height="50" Margin="23,699,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="LightGray"
                BorderBrush="Black"
                Click="Ghetto_Click">
            <Image x:Name="Ghetto_Img" Source="/Ghetto.png" Stretch="Uniform"/>
        </Button>

        <!-- Кнопка массового захоронения -->
        <Button x:Name="MassGrave" Width="50" Height="50" Margin="273,622,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="LightGray"
                BorderBrush="Black"
                Click="MassGrave_Click">
            <Image x:Name="MassGrave_Img" Source="/MassGrave.png" Stretch="Uniform"/>
        </Button>

        <!-- Кнопка памятника -->
        <Button x:Name="Monument" Width="50" Height="50" Margin="273,699,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="LightGray"
                BorderBrush="Black"
                Click="Monument_Click">
            <Image x:Name="Monument_Img" Source="/Monument.png" Stretch="Uniform"/>
        </Button>

        <Label Content="Сгоревшие Деревни" FontSize="16" HorizontalAlignment="Left" Margin="87,634,0,0" VerticalAlignment="Top"/>
        <Label Content="Еврейские Гетто" FontSize="16" HorizontalAlignment="Left" Margin="87,708,0,0" VerticalAlignment="Top"/>
        <Label Content="Братские Могилы" FontSize="16" HorizontalAlignment="Left" Margin="340,634,0,0" VerticalAlignment="Top"/>
        <Label Content="Монументы" FontSize="16" HorizontalAlignment="Left" Margin="340,708,0,0" VerticalAlignment="Top"/>
         
    </Grid>
</Window>