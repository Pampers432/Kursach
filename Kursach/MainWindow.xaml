<Window x:Class="Kursach.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        WindowStartupLocation="CenterScreen"
        Width="1550" Height="875"
        WindowStyle="None">

    <Grid>
        <Image x:Name="img"
               Source="/Map.png"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Margin="0,21,771,0" 
               Width="700" Height="600" Stretch="Fill"/>
        <TextBlock x:Name="textBlock" Text="Нет изображения" FontSize="16" FontWeight="Bold" Margin="0,-250,700,0"
               HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
        <Image/>


        <Rectangle HorizontalAlignment="Right" 
                   VerticalAlignment="Top" 
                   Width="662" 
                   Height="600" 
                   Stroke="Black"
                   Fill="Gray"
                   Margin="0,21,18,0"/>
        <Button Content="Справка" Margin="871,648,496,191"/>
        <Button Content="Очистить" Margin="1092,648,275,191" Click="Button_Click"/>
        <Button Content="Жертвы" Margin="1349,648,18,192"/>

        <TextBlock x:Name="Info" Text="{Binding LongText}" 
           TextWrapping="Wrap" Margin="870,21,18,254" FontSize="16"/>
        
        <Button x:Name="Vil1" HorizontalAlignment="Left" Margin="163,438,0,0" VerticalAlignment="Top"
        Width="25" Height="25" Background="Transparent" BorderThickness="0" Click="Vil1_Click">
            <Image Source="/Village.png" Stretch="Uniform"/>
        </Button>
    </Grid>
</Window>