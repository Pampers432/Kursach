<Window x:Class="Kursach.Display"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        WindowStartupLocation="CenterScreen"
        Width="1550" Height="875"
        WindowStyle="None"
        Closing="Window_Closing"
        >

    <Grid>
        <Image x:Name="img"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Margin="0,21,771,0" 
               Width="700" Height="600" Stretch="Fill"/>
        <TextBlock x:Name="textBlock" Text="Нет изображения" FontSize="16" FontWeight="Bold" Margin="0,-250,700,0"
               HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
        <Image/>


        <Rectangle HorizontalAlignment="Right" 
                   VerticalAlignment="Top" 
                   Width="662" 
                   Height="600" 
                   Stroke="Black"
                   Fill="Gray"
                   Margin="0,21,18,0"/>
        <Button Content="Вернуться" Margin="44,648,1323,191" Click="ReturnButton_Click"/>
        <Button Content="Жертвы" Margin="282,648,1085,192"/>

        <TextBlock x:Name="Info" Text="{Binding LongText}" 
           TextWrapping="Wrap" Margin="870,21,18,254" FontSize="16"/>

        
    </Grid>
</Window>