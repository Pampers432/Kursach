<Window x:Class="Kursach.Display"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        WindowStartupLocation="CenterScreen"
        Width="1550" Height="875"
        WindowStyle="None"
        Closing="Window_Closing"
        >

    <Grid>
        <Image x:Name="img"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Margin="0,58,758,0" 
               Width="769" Height="659" Stretch="Fill"/>
        <TextBlock x:Name="textBlock" Text="Нет изображения" FontSize="16" FontWeight="Bold" Margin="0,-250,700,0"
               HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
        <Image Margin="2500,1118,-2500,-1118"/>


        <Rectangle HorizontalAlignment="Right" 
                   VerticalAlignment="Top" 
                   Width="727" 
                   Height="659" 
                   Stroke="Black"
                   Fill="LightGray"
                   Margin="0,58,11,0"/>
        <Button Content="Вернуться" Margin="56,769,1311,53" Click="ReturnButton_Click" Background="#88CFAC"/>
        <Button Content="Жертвы" Margin="294,769,1073,55" Background="#88CFAC"/>

        <TextBlock x:Name="Info" Text="{Binding LongText}" 
           TextWrapping="Wrap" Margin="812,58,11,158" FontSize="16"/>


    </Grid>
</Window>